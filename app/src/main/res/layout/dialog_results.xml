<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:alpha="225"
              android:gravity="center|bottom"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12sp">

        <TextView
            android:id="@+id/resultsPokemonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text="Pokename"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            />

        <TextView

            android:id="@+id/resultsPokemonLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:text="@string/level"
            android:textColor="#888"
            android:textSize="18sp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout

            android:id="@+id/llSingleMatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="6sp"
                android:background="@drawable/skin_iv_linearlayout"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="6sp"
                android:paddingLeft="12sp"
                android:paddingRight="12sp"
                android:paddingTop="6sp">

                <TextView
                    android:id="@+id/resultsAttack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:textColor="#222"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:gravity="center"
                    android:text="@string/atk"
                    android:textColor="#222"
                    android:textSize="12sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="6sp"
                android:background="@drawable/skin_iv_linearlayout"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="6sp"
                android:paddingLeft="12sp"
                android:paddingRight="12sp"
                android:paddingTop="6sp">

                <TextView
                    android:id="@+id/resultsDefense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:textColor="#222"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:text="@string/def"
                    android:textColor="#222"
                    android:textSize="12sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="6sp"
                android:background="@drawable/skin_iv_linearlayout"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="6sp"
                android:paddingLeft="12sp"
                android:paddingRight="12sp"
                android:paddingTop="6sp">

                <TextView

                    android:id="@+id/resultsHP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:textColor="#222"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:text="@string/sta"
                    android:textColor="#222"
                    android:textSize="12sp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llMinIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="6sp"
            android:background="@drawable/skin_iv_linearlayout"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="6sp"
            android:paddingLeft="12sp"
            android:paddingRight="12sp"
            android:paddingTop="6sp">

            <TextView
                android:id="@+id/resultsMinPercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="76%"
                android:textColor="#222"
                android:textSize="24sp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_marginLeft="5sp"
                android:gravity="center"
                android:text="MIN"
                android:textColor="#222"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llAvgIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="6sp"
            android:background="@drawable/skin_iv_linearlayout"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="6sp"
            android:paddingLeft="12sp"
            android:paddingRight="12sp"
            android:paddingTop="6sp">

            <TextView

                android:id="@+id/resultsAvePercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="82%"
                android:textColor="#222"
                android:textSize="24sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tvAvgIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_marginLeft="5sp"
                android:text="AVG"
                android:textColor="#222"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llMaxIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="6sp"
            android:background="@drawable/skin_iv_linearlayout"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="6sp"
            android:paddingLeft="12sp"
            android:paddingRight="12sp"
            android:paddingTop="6sp">

            <TextView

                android:id="@+id/resultsMaxPercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="88%"
                android:textColor="#222"
                android:textSize="24sp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_marginLeft="5sp"
                android:text="MAX"
                android:textColor="#222"
                android:textSize="12sp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llMultipleIVMatches"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12sp">

            <TextView
                android:id="@+id/resultsCombinations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="## Possible Combinations"
                android:textColor="#888"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tvSeeAllPossibilities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="right"
                android:text="@string/see_all"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"/>
        </LinearLayout>

        <include
            android:id="@+id/refine_by_last_scan"
            layout="@layout/dialog_refine_by_last_scan"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12sp"
        android:layout_marginRight="12sp"
        android:layout_marginTop="5dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/resultsMoreInformationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:text="@string/advanced_information"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/resultsMoreInformationArrow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="true"
                android:paddingTop="1dp"
                android:src="@drawable/blue_arrow_collapsed"/>
        </LinearLayout>


        <include
            android:id="@+id/expandedResultsBox"
            layout="@layout/expanded_results_box"
            android:visibility="gone"
            />

    </LinearLayout>

</LinearLayout>

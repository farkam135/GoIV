<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <size
                android:width="60dp"
                android:height="60dp"/>
            <corners android:radius="1000dp"/>
            <solid android:color="#20000000"/>
        </shape>
    </item>

    <!--Outer Background-->
    <item android:left="2dp"
        android:right="2dp"
        android:bottom="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="1000dp"/>
            <solid android:color="#1C8796"/>
        </shape>
    </item>

    <!--Colored Ring-->
    <item
        android:id="@+id/ivButtonRing"
        android:left="6dp"
        android:right="6dp"
        android:bottom="6dp"
        android:top="6dp">
        <shape android:shape="rectangle">
            <corners android:radius="1000dp"/>
            <gradient
                android:angle="0"
                android:endColor="#68F0CE"
                android:startColor="#AFFFAF"/>
        </shape>
    </item>

    <!--Inner Background-->
    <item android:left="7dp"
        android:right="7dp"
        android:bottom="7dp"
        android:top="7dp">
        <shape android:shape="rectangle">
            <corners android:radius="1000dp"/>
            <solid android:color="#1C8796"/>
        </shape>
    </item>

    <!--Left Highlighted Color-->
    <item
        android:id="@+id/ivPreviewMinIndicator"
        android:left="8dp"
        android:right="90dp"
        android:bottom="8dp"
        android:top="8dp">
        <shape android:shape="rectangle">
            <corners
                android:topLeftRadius="1000dp"
                android:bottomLeftRadius="1000dp"/>
            <gradient
                android:angle="0"
                android:endColor="@color/p_background"
                android:startColor="@color/p_background"/>
        </shape>
    </item>

    <!--Right Highlighted Color-->
    <item
        android:id="@+id/ivPreviewMaxIndicator"
        android:left="90dp"
        android:right="8dp"
        android:bottom="8dp"
        android:top="8dp">
        <shape android:shape="rectangle">
            <corners
                android:topRightRadius="1000dp"
                android:bottomRightRadius="1000dp"/>
            <gradient
                android:angle="0"
                android:endColor="@color/p_background"
                android:startColor="@color/p_background"/>
        </shape>
    </item>


</layer-list>
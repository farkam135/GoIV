<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="oval">
            <size
                android:width="60dp"
                android:height="60dp"/>
            <solid android:color="#20000000"/>
        </shape>
    </item>

    <!-- Outer -->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="oval">
            <solid android:color="#1C8796"/>
        </shape>
    </item>

    <!-- Ring -->
    <item
        android:bottom="6dp"
        android:left="6dp"
        android:right="6dp"
        android:top="6dp">
        <shape android:shape="oval">

            <gradient
                android:angle="270"
                android:endColor="#68F0CE"
                android:startColor="#AFFFAF"/>
        </shape>
    </item>

    <!-- Inner -->
    <item
        android:bottom="7dp"
        android:left="7dp"
        android:right="7dp"
        android:top="7dp">
        <shape android:shape="oval">
            <solid android:color="#1C8796"/>
        </shape>
    </item>

    <!-- I -->
    <item
        android:bottom="18dp"
        android:left="18dp"
        android:right="39.2dp"
        android:top="18dp">
        <shape android:shape="rectangle">
            <corners android:radius="4dp"/>
            <gradient
                android:endColor="#A7FDB3"
                android:startColor="#AFFFAF"/>
        </shape>
    </item>

    <!-- V Left -->
    <item
        android:bottom="17.5dp"
        android:left="29dp"
        android:right="28dp"
        android:top="17.5dp">
        <rotate android:fromDegrees="-20">
            <shape android:shape="rectangle">
                <corners android:radius="8dp"/>
                <gradient
                    android:endColor="#7DF4C5"
                    android:startColor="#9DFBB7"/>
            </shape>
        </rotate>
    </item>

    <!-- V Right -->
    <item
        android:bottom="17.5dp"
        android:left="37dp"
        android:right="20dp"
        android:top="17.5dp">
        <rotate android:fromDegrees="20">
            <shape android:shape="rectangle">
                <corners android:radius="8dp"/>
                <gradient
                    android:endColor="#68F0CE"
                    android:startColor="#8AF7BF"/>
            </shape>
        </rotate>
    </item>

</layer-list>
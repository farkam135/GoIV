<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:paddingLeft="10dp"
        android:text="Preview: This is how your paste will look"
        android:textColor="@color/buttonText"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>


        <TextView
            android:id="@+id/clipboardPreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:text="example"/>


        <TextView
            android:id="@+id/clipboardMaxLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Max length)"
            android:textColor="@color/unimportantText"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@color/colorPrimary"
        android:paddingLeft="10dp"
        android:text="Edit: Poke to remove token "
        android:textColor="@color/buttonText"/>

    <!-- Edit tokens layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/clipTokenEditor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">


        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@color/colorPrimary"
        android:paddingLeft="10dp"
        android:text="List of values"
        android:textColor="@color/buttonText"/>

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/singleResCheckbox"
        android:checked="false"
        android:background="#dadada"
        android:text="Edit single result clipboard setting"
        android:onClick="updateFields"
        android:textAlignment="center"/>

    <!-- Token menu scroll container -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fadeScrollbars="false">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">


            <CheckBox
                android:id="@+id/clipboardMaxEvolutionVariant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#dadada"
                android:checked="true"
                android:onClick="toggleEvolvedVariant"
                android:text="Show max evolution token variants"
                android:textAlignment="center"/>


            <LinearLayout
                android:id="@+id/clipboardShowcase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:orientation="vertical"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <EditText
                    android:id="@+id/customSeperator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="20dp"
                    android:hint="Custom Text"/>

                <Button
                    android:onClick="addCustomString"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="10dp"
                    android:text="âœ“"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <!-- Description and add field -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp">

        <!-- Description field -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="#dadada"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:paddingLeft="10dp"
                android:text="Description"
                android:textColor="@color/buttonText"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp">

                <TextView
                    android:id="@+id/clipboardDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No token selected"
                    android:textColor="@color/importantText"/>

            </ScrollView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:backgroundTint="@color/colorPrimary"
                android:onClick="addToken"
                android:text="add"
                android:textColor="@color/buttonText"/>

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:backgroundTint="@color/colorPrimary"
                android:onClick="saveAndExit"
                android:text="Save and exit"
                android:textColor="@color/buttonText"
                android:textSize="10sp"/>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>